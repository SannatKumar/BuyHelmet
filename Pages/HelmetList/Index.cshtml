@page
@model BuyHelmet.Pages.HelmetList.IndexModel


<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Helmet List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New Helmet</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Helmets.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Helmets.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Helmets.FirstOrDefault().Brand"></label>
                        </th>
                        <th>
                            <label asp-for="Helmets.FirstOrDefault().Refnumber"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.Helmets)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Brand)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick ="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                    </td>
                </tr>
                    }
                </table>
            }
            else
            {
                <p>No Helmets available.</p>
            }
        </form>
    </div>
</div>
