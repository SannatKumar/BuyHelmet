@page
@model BuyHelmet.Pages.HelmetList.EditModel


<br />
<h2 class="text-info">Edit List</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Helmet.Id" />
        <div class="'text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Helmet.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Helmet.Name" class="form-control" />
            </div>
            <span asp-validation-for="Helmet.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Helmet.Brand"></label>
            </div>
            <div class="col-6">
                <input asp-for="Helmet.Brand" class="form-control" />
            </div>
            <span asp-validation-for="Helmet.Brand" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Helmet.Refnumber"></label>
            </div>
            <div class="col-6">
                <input asp-for="Helmet.Refnumber" class="form-control" />
            </div>
            <span asp-validation-for="Helmet.Refnumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back</a>
            </div>
        </div>
    </form>
</div>
